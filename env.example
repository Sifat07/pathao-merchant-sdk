# Pathao SDK Environment Variables
# Copy this file to .env and fill in your actual values

# Base URL - REQUIRED (choose one):
# For sandbox/testing:
PATHAO_BASE_URL=https://courier-api-sandbox.pathao.com

# For live/production:
# PATHAO_BASE_URL=https://api-hermes.pathao.com

# Authentication credentials (all required)
PATHAO_CLIENT_ID=your-client-id
PATHAO_CLIENT_SECRET=your-client-secret
PATHAO_USERNAME=your-username
PATHAO_PASSWORD=your-password

# Optional: Request timeout in milliseconds (default: 30000)
# PATHAO_TIMEOUT=30000

# Usage Examples:
# 1. All from environment variables:
#    const pathao = new PathaoApiService({});
#
# 2. Mix of config and environment:
#    const pathao = new PathaoApiService({
#      clientId: 'override-client-id', // This overrides PATHAO_CLIENT_ID
#      // Other credentials taken from environment variables
#    });
#
# 3. All from config (env as fallback):
#    const pathao = new PathaoApiService({
#      clientId: process.env.PATHAO_CLIENT_ID || 'fallback-client-id',
#      // ... other credentials
#    });
